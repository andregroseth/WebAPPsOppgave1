@model IEnumerable<WebAppsProsjekt1.Model.VMUser>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/Background.cshtml";
}
@if (Session["Login"] == null)
{
    Session["AccessFailedLogin"] = "true";
    Response.Redirect("UserLogin");
}
<link href="~/Content/cssList.css" rel="stylesheet" />
<h1>List of Users</h1>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Userlevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Area)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Userlevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Area)
        </td>
		<td>
			@Html.ActionLink("Edit", "UserEdit", new { id = item.Id }) |
			@Html.ActionLink("Details", "UserDetailAdminView", new { id = item.Id }) |
			@Html.ActionLink("Delete", "UserDelete", new { id = item.Id })
</tr>
    }
</table>
</body>
</html>