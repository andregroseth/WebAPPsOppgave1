@model WebAppsProsjekt1.Models.UserHelper

@{
    ViewBag.Title = "UserDetail";
    Layout = "~/Views/Shared/Background.cshtml";
}
<link href="~/Content/cssUserDetail.css" rel="stylesheet" />
@if (Session["Login"] == null)
{

    Response.Redirect("UserLogin");

}
<div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">@Html.DisplayFor(model => model.Firstname) @Html.DisplayFor(model => model.Surname)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="~/Content/images/avatar.png" class="img-circle img-responsive"> </div>

                    <div class=" col-md-9 col-lg-9 ">
                        <table class="table table-user-information">
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Id)</td>
                                    <td>@Html.DisplayFor(model => model.Id)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Userlvl)</td>
                                    <td>@Html.DisplayFor(model => model.Userlvl)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Email)</td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                                <tr style="display:none">
                                    <td>@Html.DisplayNameFor(model => model.Password)</td>
                                    <td>@Html.HiddenFor(model => model.Password)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Address)</td>
                                    <td>@Html.DisplayFor(model => model.Address)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.ZipCode)</td>
                                    <td>@Html.DisplayFor(model => model.ZipCode)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Area)</td>
                                    <td>@Html.DisplayFor(model => model.Area)</td>
                                </tr>

                            </tbody>
                        </table>
                        <div style="padding-left:1em;float:right;width:auto"><a href="/User/UserList" class="btn btn-success">Back</a></div>
                        <div style="padding-left:1em;float:right;width:auto"><a href="/Order/OrderList" class="btn btn-success">Show Order History</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>