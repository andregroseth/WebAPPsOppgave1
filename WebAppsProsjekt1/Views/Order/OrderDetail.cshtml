@model IEnumerable<WebAppsProsjekt1.Models.OrderlineHelper>

@{
    ViewBag.Title = "OrderDetail";
    Layout = "~/Views/Shared/Background.cshtml";
}
@if (Session["Login"] == null)
{

    Response.Redirect("/User/UserLogin");

}

<head>
    <link href="~/Content/css/cssCart/cssCartList.css" rel="stylesheet" />
</head>

<h1>Order Detail</h1>
@foreach (var item in Model)
{

    <div class="row">
        @Html.HiddenFor(model => item.Id, new { htmlAttributes = new { @class = "form-control", id = "movieId" } })
        <div class="form-group">
            <div class="col-lg-1">
                <div class="img-container">
                    <img src="@item.ImagePath" style="width:6vh; height:8vh;" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-3">
                <h2>@item.Title</h2>
                <p>@item.Category</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8">
                <h2>@item.Cost Kroner</h2>
            </div>
        </div>
    </div>


}
</body>
</html>


