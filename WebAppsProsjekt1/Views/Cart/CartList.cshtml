@model List<WebAppsProsjekt1.Models.Movie>
@{
	ViewBag.Title = "CartList";
	Layout = "~/Views/Shared/Background.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/cssCartList.css"/>
<h1>Cart</h1>
<div class="container-fluid" id="cart_container">
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		for (int i = 0; i < Model.Count; i++)
		{
    <div class="row">
        @Html.HiddenFor(model => Model[i].Id, new { htmlAttributes = new { @class = "form-control", id = "movieId" } })
        <div class="form-group">
            <div class="col-lg-1">
                <div class="img-container">
                    <img src="@Model[i].ImagePath" style="width:6vh; height:8vh;" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-3">
                <h2>@Model[i].Title</h2>
                <p>@Model[i].Category</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8">
                <h2>@Model[i].Cost Kroner</h2>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8">
                <div style="float:inherit"><a href="/Cart/CartDelete?id=@Model[i].Id" class="btn btn-danger">Remove</a></div>
            </div>
        </div>
    </div>
		}
		<div class="form-group">
            <div class="row">
                <h2 style="padding-left:10vh">Total: @Model.Count <div style="float:right;padding-right:48vh">@(Model.Sum(i => i.Cost))Kroner</div></h2>
                <div class="col-lg-4">
                </div>
                <div class="col-lg-4">
                    <div style="float:left">@Html.ActionLink("Clear Cart", "CartClear", "Cart", new { @class = "btn btn-danger" })</div>
                    <div style="float:right"><input type="submit" class="btn btn-success" value="Check out" /></div>
                </div>
                <div class="col-lg-4">
                </div>
            </div>
		</div>
	}
</div>
</body>
</html>
